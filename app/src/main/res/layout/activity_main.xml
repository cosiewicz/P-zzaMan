<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrondi"
        android:padding="10dp"
        android:text="PizzaMan shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/button_managePizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="GÃ©rer les pizzas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title" />

    <Button
        android:id="@+id/button_pizzaExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitter"
        app:layout_constraintEnd_toEndOf="@+id/button_managePizza"
        app:layout_constraintStart_toStartOf="@+id/button_managePizza"
        app:layout_constraintTop_toBottomOf="@+id/button_managePizza" />

    <Button
        android:id="@+id/button_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lister"
        app:layout_constraintEnd_toEndOf="@+id/button_managePizza"
        app:layout_constraintStart_toStartOf="@+id/button_managePizza"
        app:layout_constraintTop_toBottomOf="@+id/button_pizzaExit" />

    <Button
        android:id="@+id/button_addPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter pizza"
        app:layout_constraintEnd_toEndOf="@+id/button_list"
        app:layout_constraintStart_toStartOf="@+id/button_list"
        app:layout_constraintTop_toBottomOf="@+id/button_list" />

</androidx.constraintlayout.widget.ConstraintLayout>